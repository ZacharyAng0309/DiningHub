@page
@model RegisterModel
@{
    ViewData["Title"] = "Register Page";
}


<div class="container-fluid shadow rounded-3 p-4 mb-5 bg-white pt-2">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div class="row pt-2">
                    <div class="col-md-6">
                        <img src="/Img/registerpageimage1.jpg" class="img-fluid rounded" alt="registerpageimage">
                    </div>
                    <div class="col-md-6 p-2">
                        <div class="d-flex justify-content-center">
                            <img src="/Img/dininghublogo.png" class="img-fluid w-50" alt="registerpageimage">
                        </div>
                        <h2 class="border-bottom mb-4 pb-2 text-center">Sign Up.</h2>

                    <div class="d-flex flex-column justify-content-between">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating my-3">
                            <input asp-for="Input.Username" class="form-control" aria-required="true" placeholder="Username" />
                            <label asp-for="Input.Username">Username</label>
                            <span asp-validation-for="Input.Username" class="text-danger"></span>
                        </div>
                        <div class="form-floating my-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating my-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-floating my-3">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary mt-2">Register</button>
                        <div class="pt-2">
                            <p>Already have an account? <a href="/Identity/Account/Login">Login Here.</a></p>
                        </div>
                        </div>
                       
                    </div>
                </div>

            </form>
           
</div>
