<div class="container">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row d-flex justify-content-between align-items-center">
                <div class="col-sm-8">
                    <h2>Manage Categories</h2>
                </div>
                <div class="col-sm-4 text-end">
                    <a asp-action="Create" class="btn btn-success">Create New Category</a>
                </div>
            </div>
        </div>

        @if (TempData["AlertMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["AlertMessage"]
            </div>
        }

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-primary">Edit</a>
                            <form method="post" asp-action="Delete" asp-route-id="@item.CategoryId" class="d-inline">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this category?');">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>