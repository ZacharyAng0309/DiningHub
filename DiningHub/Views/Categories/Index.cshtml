<div class="container-fluid shadow rounded-3 mb-5 bg-white pt-4">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row d-flex justify-content-between align-items-center">
                <div class="col-sm-6">
                    <h2>Manage Categories</h2>
                </div>
                <div class="col-sm-6 text-end">
                    <a asp-action="Index" asp-controller="InventoryManagement" class="btn btn-secondary rounded-pill col-5">Back to Inventory</a>
                    <a asp-action="Create" class="btn btn-success rounded-pill col-5">Create New Category</a>
                </div>
            </div>
        </div>

        @if (TempData["AlertMessage"] != null)
        {
            <div class="alert alert-danger my-3">
                @TempData["AlertMessage"]
            </div>
        }

        <table class="table table-striped table-hover">
            <thead class="table-danger">
                <tr>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.Name)</td>
                        <td class="align-middle">
                            <div class="justify-content-end">
                                <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-primary rounded-pill col-5">Edit</a>
                                <form method="post" asp-action="Delete" asp-route-id="@item.CategoryId" class="d-inline">
                                    <button type="submit" class="btn btn-danger rounded-pill col-5" onclick="return confirm('Are you sure you want to delete this category?');">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
