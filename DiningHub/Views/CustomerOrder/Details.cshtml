@model DiningHub.Models.CustomerOrderDetailsViewModel

@{
    ViewData["Title"] = $"Order Details - Order ID: {Model.Order.OrderId}";
}

<h2>Order Details</h2>

<div>
    <h4>Order Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Order ID</dt>
        <dd class="col-sm-10">@Model.Order.OrderId</dd>

        <dt class="col-sm-2">Order Date</dt>
        <dd class="col-sm-10">@Model.Order.OrderDate.ToString("g")</dd>

        <dt class="col-sm-2">Total Amount</dt>
        <dd class="col-sm-10">@Model.Order.TotalAmount.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("ms-MY"))</dd>
    </dl>

    <h4>Order Items</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Order.OrderItems)
            {
                <tr>
                    <td>@item.MenuItem.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("ms-MY"))</td>
                    <td>@(item.Quantity * item.Price).ToString("C", System.Globalization.CultureInfo.GetCultureInfo("ms-MY"))</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (Model.Feedback != null)
{
    <div>
        <h4>Feedback</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Comments</dt>
            <dd class="col-sm-10">@Model.Feedback.Comments</dd>

            <dt class="col-sm-2">Rating</dt>
            <dd class="col-sm-10">@Model.Feedback.Rating</dd>

            <dt class="col-sm-2">Date</dt>
            <dd class="col-sm-10">@Model.Feedback.Date.ToString("g")</dd>
        </dl>
    </div>
}
else if (Model.CanProvideFeedback)
{
    <div>
        <a asp-action="Create" asp-controller="CustomerFeedback" asp-route-orderId="@Model.Order.OrderId" class="btn btn-primary">Create Feedback</a>
    </div>
}

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to Order History</a>
</div>
