@model IEnumerable<DiningHub.Controllers.CustomerOrderViewModel>

@{
    ViewData["Title"] = "Order History";
}

<h2>Order History</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Total Amount</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Order.OrderId</td>
                <td>@item.Order.OrderDate.ToString("g")</td>
                <td>@item.Order.TotalAmount.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("ms-MY"))</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Order.OrderId" class="btn btn-info">Details</a>
                    @if (item.HasFeedback)
                    {
                        <a asp-action="Details" asp-route-id="@item.Order.OrderId" class="btn btn-secondary">View Feedback</a>
                    }
                    else if (item.CanProvideFeedback)
                    {
                        <a asp-action="Create" asp-controller="CustomerFeedback" asp-route-orderId="@item.Order.OrderId" class="btn btn-primary">Create Feedback</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
