@model DiningHub.Models.Feedback

@{
    ViewData["Title"] = $"Delete Feedback - {Model.FeedbackId}";
}

<h2>Delete Feedback</h2>

<div>
    <h4>Are you sure you want to delete this feedback?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">User</dt>
        <dd class="col-sm-10">@Model.User.UserName</dd>

        <dt class="col-sm-2">Comments</dt>
        <dd class="col-sm-10">@Model.Comments</dd>

        <dt class="col-sm-2">Rating</dt>
        <dd class="col-sm-10">@Model.Rating</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToString("g")</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
