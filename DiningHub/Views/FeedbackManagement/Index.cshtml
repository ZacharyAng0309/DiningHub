<head>
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>

<div class="container">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row d-flex justify-content-between align-items-center">
                <div class="col-sm-8">
                    <h2>Manage Feedback</h2>
                </div>
            </div>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>User</th>
                    <th>Comments</th>
                    <th>Rating</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var feedback in Model)
                {
                    <tr>
                        <td>@feedback.User.UserName</td>
                        <td>@feedback.Comments</td>
                        <td>@feedback.Rating</td>
                        <td>@feedback.Date.ToString("g")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@feedback.FeedbackId" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#detailsModal-@feedback.FeedbackId">Details</a>
                            <form method="post" asp-action="Delete" asp-route-id="@feedback.FeedbackId" class="d-inline">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this feedback?');">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal Templates -->
@foreach (var feedback in Model)
{
    <div class="modal fade" id="detailsModal-@feedback.FeedbackId" tabindex="-1" aria-labelledby="detailsModalLabel-@feedback.FeedbackId" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="detailsModalLabel-@feedback.FeedbackId">Details - @feedback.User.UserName</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <h2>Feedback Details</h2>
                    <hr />
                    <div>
                        <dl class="row">
                            <dt class="col-sm-2">User</dt>
                            <dd class="col-sm-10">@feedback.User.UserName</dd>
                            <dt class="col-sm-2">Comments</dt>
                            <dd class="col-sm-10">@feedback.Comments</dd>
                            <dt class="col-sm-2">Rating</dt>
                            <dd class="col-sm-10">@feedback.Rating</dd>
                            <dt class="col-sm-2">Date</dt>
                            <dd class="col-sm-10">@feedback.Date.ToString("g")</dd>
                        </dl>
                    </div>
                </div>
                <div class="modal-footer"> 
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}
