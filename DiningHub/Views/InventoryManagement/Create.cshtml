@model DiningHub.Models.InventoryItem

@{
    ViewData["Title"] = "Create Inventory Item";
}

<head>
    <link rel="stylesheet" href="~/css/editAdmin.css" asp-append-version="true" />
</head>

<div class="container">
    <div class="card">
        <div class="card-header">
            <h2>Create Inventory Item</h2>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="form-group">
                    <label asp-for="Name" class="control-label mb-2"></label>
                    <input asp-for="Name" class="form-control mb-4" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label mb-2"></label>
                    <input asp-for="Description" class="form-control mb-4" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quantity" class="control-label mb-2"></label>
                    <input asp-for="Quantity" class="form-control mb-4" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label mb-2"></label>
                    <select asp-for="CategoryId" class="form-control mb-4">
                        <option value="">Select Category</option>
                        @foreach (var category in ViewBag.Categories as List<DiningHub.Models.Category>)
                        {
                            <option value="@category.CategoryId">@category.Name</option>
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Create" class="btn btn-save" />
                    <a asp-action="Index" class="btn btn-cancel">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
