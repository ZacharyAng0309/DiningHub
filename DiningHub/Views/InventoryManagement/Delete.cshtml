@model DiningHub.Models.InventoryItem

@{
    ViewData["Title"] = $"Delete Inventory Item - {Model.Name}";
}

<h2>Delete Inventory Item</h2>

<div>
    <h4>Are you sure you want to delete this inventory item?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>

        <dt class="col-sm-2">Last Updated</dt>
        <dd class="col-sm-10">@Model.LastUpdated.ToString("g")</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="InventoryItemId" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
