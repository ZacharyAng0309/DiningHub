@model DiningHub.Models.InventoryItem

@{
    ViewData["Title"] = "Edit Inventory Item";
}

<h2>Edit Inventory Item</h2>

<form asp-action="Edit" method="post">
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <input type="hidden" asp-for="InventoryItemId" />
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Quantity" class="control-label"></label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CategoryId" class="control-label mb-2">Category</label>
            <select asp-for="CategoryId" class="form-control mb-4">
                @foreach (var category in ViewBag.Categories)
                {
                    bool selected = category.Value == Model.CategoryId.ToString();
                    <option value="@category.Value" selected="@selected">@category.Text</option>
                }
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
