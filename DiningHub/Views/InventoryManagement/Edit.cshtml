@model DiningHub.Models.InventoryItem

@{
    ViewData["Title"] = "Edit Inventory Item";
}

<div class="edit-container">
    <div class="card">
        <div class="card-header">
            <h2>Edit Inventory Item</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="InventoryItemId" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label mb-2"></label>
                    <input asp-for="Name" class="form-control mb-4" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label mb-2"></label>
                    <input asp-for="Description" class="form-control mb-4" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quantity" class="control-label mb-2"></label>
                    <input asp-for="Quantity" class="form-control mb-4" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label mb-2">Category</label>
                    <select asp-for="CategoryId" class="form-control mb-4">
                        @foreach (var category in ViewBag.Categories)
                        {
                            bool selected = category.Value == Model.CategoryId.ToString();
                            <option value="@category.Value" selected="@selected">@category.Text</option>
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Save" class="btn btn-save" />
                    <a asp-action="Index" class="btn btn-cancel">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}