@model IEnumerable<DiningHub.Models.MenuItem>

<h2>Menu</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td>@item.Category</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.MenuItemId">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
