@model DiningHub.Models.MenuItem

@{
    ViewData["Title"] = $"Delete Menu Item - {Model.Name}";
}

<h2>Delete Menu Item</h2>

<div>
    <h4>MenuItem</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Model.Price.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("ms-MY"))
        </dd>
        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10">
            @Model.Category
        </dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="MenuItemId" />
    <div class="form-group">
        <p>Are you sure you want to delete this menu item?</p>
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>
