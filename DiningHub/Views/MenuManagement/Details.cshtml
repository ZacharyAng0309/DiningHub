@model DiningHub.Models.MenuItem

@{
    ViewData["Title"] = $"Details - {Model.Name}";
}

<h2>Menu Item Details</h2>

<div>
    <h4>Menu Item</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("ms-MY"))</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category.Name</dd>

        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10"><img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid" /></dd>

        <dt class="col-sm-2">Is Available</dt>
        <dd class="col-sm-10">@Model.IsAvailable</dd>

        <dt class="col-sm-2">Created By</dt>
        <dd class="col-sm-10">@Model.CreatedBy.UserName</dd>

        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToString("g")</dd>

        <dt class="col-sm-2">Updated At</dt>
        <dd class="col-sm-10">@Model.UpdatedAt.ToString("g")</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.MenuItemId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
