@model IEnumerable<DiningHub.Models.MenuItem>

@{
    ViewData["Title"] = "Manage Menu Items";
}

<h2>Manage Menu Items</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("ms-MY"))</td>
                <td>@item.Category</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.MenuItemId">Details</a> |
                    <a asp-action="Edit" asp-route-id="@item.MenuItemId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.MenuItemId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Menu Item</a>
