@model IEnumerable<DiningHub.Models.Order>

@{
    ViewData["Title"] = "Manage Orders";
}

<h2>Manage Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>User</th>
            <th>Order Date</th>
            <th>Total Amount</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.User.UserName</td>
                <td>@order.OrderDate.ToString("g")</td>
                <td>@order.TotalAmount.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("ms-MY"))</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
