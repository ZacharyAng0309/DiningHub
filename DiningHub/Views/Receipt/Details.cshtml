@model DiningHub.Models.Receipt

@{
    ViewData["Title"] = $"Receipt - Order ID: {Model.OrderId}";
}

<h2>Receipt</h2>

<div>
    <h4>Receipt Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Receipt ID
        </dt>
        <dd class="col-sm-10">
            @Model.ReceiptId
        </dd>
        <dt class="col-sm-2">
            Order ID
        </dt>
        <dd class="col-sm-10">
            @Model.OrderId
        </dd>
        <dt class="col-sm-2">
            Total Amount
        </dt>
        <dd class="col-sm-10">
            @Model.TotalAmount.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("ms-MY"))
        </dd>
        <dt class="col-sm-2">
            Date Issued
        </dt>
        <dd class="col-sm-10">
            @Model.DateIssued.ToString("g")
        </dd>
    </dl>

    <h4>Order Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Order Date
        </dt>
        <dd class="col-sm-10">
            @Model.Order.OrderDate.ToString("g")
        </dd>
        <dt class="col-sm-2">
            User Name
        </dt>
        <dd class="col-sm-10">
            @Model.Order.UserName
        </dd>
        <dt class="col-sm-2">
            Payment Method
        </dt>
        <dd class="col-sm-10">
            @Model.Order.PaymentMethod
        </dd>
        <dt class="col-sm-2">
            Payment Date
        </dt>
        <dd class="col-sm-10">
            @Model.Order.PaymentDate?.ToString("g") ?? "N/A"
        </dd>
    </dl>

    <h4>Order Items</h4>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Order.OrderItems)
            {
                <tr>
                    <td>@item.MenuItemName</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("ms-MY"))</td>
                    <td>RM @(item.Quantity * item.Price)</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <a asp-action="" asp-controller="Order" class="btn btn-secondary">Back to Order History</a>
    <a asp-action="Create" asp-controller="CustomerFeedback" asp-route-orderId="@Model.OrderId" class="btn btn-primary">Leave Feedback</a>
</div>
