@model DiningHub.Models.Receipt

@{
    ViewData["Title"] = $"Receipt - Order ID: {Model.OrderId}";
}

<h2>Receipt</h2>

<div>
    <h4>Receipt Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Receipt ID
        </dt>
        <dd class="col-sm-10">
            @Model.ReceiptId
        </dd>
        <dt class="col-sm-2">
            Order ID
        </dt>
        <dd class="col-sm-10">
            @Model.OrderId
        </dd>
        <dt class="col-sm-2">
            Total Amount
        </dt>
        <dd class="col-sm-10">
            @Model.TotalAmount.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("ms-MY"))
        </dd>
        <dt class="col-sm-2">
            Date Issued
        </dt>
        <dd class="col-sm-10">
            @Model.DateIssued.ToString("g")
        </dd>
    </dl>

    <h4>Order Items</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Order.OrderItems)
            {
                <tr>
                    <td>@item.MenuItem.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("ms-MY"))</td>
                    <td>@(item.Quantity * item.Price).ToString("C", System.Globalization.CultureInfo.GetCultureInfo("ms-MY"))</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <a asp-action="OrderHistory" asp-controller="Order" class="btn btn-secondary">Back to Order History</a>
</div>
