@using Microsoft.AspNetCore.Identity
@using DiningHub.Areas.Identity.Data

@inject SignInManager<DiningHubUser> SignInManager
@inject UserManager<DiningHubUser> UserManager

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.1/font/bootstrap-icons.min.css">


<ul class="navbar-nav ms-auto">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="btn btn-custom-hover px-4 me-2 d-flex align-items-center nav-links-custom" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                <i class="bi bi-person-circle me-1"></i> Hello, @UserManager.GetUserName(User)!
            </a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="d-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="btn btn-custom-hover px-4 me-2 d-flex align-items-center nav-links-custom">
                    <i class="bi bi-box-arrow-right me-1"></i> Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-custom-hover px-4 me-2 nav-links-custom" id="login" asp-area="Identity" asp-page="/Account/Login">
                <i class="bi bi-box-arrow-in-right me-1"></i> Login
            </a>
        </li>
        <li class="nav-item">
            <a class="btn btn-custom-hover px-4 nav-links-custom" id="register" asp-area="Identity" asp-page="/Account/Register">
                <i class="bi bi-person-plus me-1"></i> Register
            </a>
        </li>
    }
</ul>


