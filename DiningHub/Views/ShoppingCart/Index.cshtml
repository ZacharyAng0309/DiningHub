@model IEnumerable<DiningHub.Models.ShoppingCartItem>

@{
    ViewData["Title"] = "Shopping Cart";
}

<h2>Shopping Cart</h2>

@if (ViewBag.Message != null)
{
    <p>@ViewBag.Message</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="@item.MenuItem.ImageUrl" alt="@item.MenuItem.Name" class="img-thumbnail" width="50" /></td>
                    <td>@item.MenuItem.Name</td>
                    <td>@item.MenuItem.Description</td>
                    <td>@item.MenuItem.Price.ToString("C")</td>
                    <td>
                        <form asp-action="UpdateQuantity" method="post" class="d-inline">
                            <input type="hidden" name="cartItemId" value="@item.ShoppingCartItemId" />
                            <input type="number" name="quantity" value="@item.Quantity" min="1" class="form-control d-inline w-auto" />
                            <button type="submit" class="btn btn-primary">Update</button>
                        </form>
                    </td>
                    <td>
                        <form asp-action="RemoveFromCart" method="post" class="d-inline">
                            <input type="hidden" name="cartItemId" value="@item.ShoppingCartItemId" />
                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-end">
        <a asp-action="Checkout" class="btn btn-success">Proceed to Checkout</a>
    </div>
}
