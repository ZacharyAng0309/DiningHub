@model DiningHub.Models.AddStaffViewModel

@{
    ViewData["Title"] = "Add Staff";
}

<div class="container-fluid shadow rounded-3 mb-5 bg-white pt-4 pb-4">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row d-flex justify-content-between align-items-center">
                <div class="col-sm-8">
                    <h2>@ViewData["Title"]</h2>
                </div>
                <div class="col-sm-4 text-end">
                    <a asp-action="Index" class="btn btn-secondary btn-lg rounded-pill col-6">Back to List</a>
                </div>
            </div>
        </div>

        <div class="mt-4 px-4">
            @if (TempData["AlertMessage"] != null)
            {
                <div class="alert alert-danger mt-4" style="font-size: 1.25em;">
                    @TempData["AlertMessage"]
                </div>
            }

            <form asp-action="AddStaff" method="post">
                <div class="form-group mb-4">
                    <label asp-for="FirstName" class="form-label">First Name</label>
                    <input asp-for="FirstName" class="form-control rounded-pill" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="LastName" class="form-label">Last Name</label>
                    <input asp-for="LastName" class="form-control rounded-pill" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control rounded-pill" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control rounded-pill" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" class="form-control rounded-pill" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                    <input asp-for="ConfirmPassword" class="form-control rounded-pill" type="password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group d-flex justify-content-center align-items-center mt-4 pt-3">
                    <input type="submit" value="Add Staff" class="btn btn-success btn-lg rounded-pill col-6 mx-2 col-6" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
