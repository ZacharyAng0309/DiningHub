@model DiningHub.Areas.Identity.Data.DiningHubUser

@{
    ViewData["Title"] = $"Delete User - {Model.UserName}";
}

<h2>Delete User</h2>

<div>
    <h4>Are you sure you want to delete this user?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">User ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Username</dt>
        <dd class="col-sm-10">@Model.UserName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>

        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.LastName</dd>

        <dt class="col-sm-2">Points</dt>
        <dd class="col-sm-10">@Model.Points</dd>

        <dt class="col-sm-2">Phone Number</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>

        <dt class="col-sm-2">Two Factor Enabled</dt>
        <dd class="col-sm-10">@Model.TwoFactorEnabled</dd>

        <dt class="col-sm-2">Lockout End</dt>
        <dd class="col-sm-10">@Model.LockoutEnd</dd>

        <dt class="col-sm-2">Lockout Enabled</dt>
        <dd class="col-sm-10">@Model.LockoutEnabled</dd>

        <dt class="col-sm-2">Access Failed Count</dt>
        <dd class="col-sm-10">@Model.AccessFailedCount</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
