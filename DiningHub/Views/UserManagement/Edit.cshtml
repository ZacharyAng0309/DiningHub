@model DiningHub.Areas.Identity.Data.DiningHubUser

@{
    ViewData["Title"] = $"Edit User - {Model.UserName}";
}

<head>
    <link rel="stylesheet" href="~/css/editAdmin.css" asp-append-version="true" />
</head>

<div class="container">
    <div class="card">
        <div class="card-header">
            <h2>Edit User</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="UserName" class="control-label mb-2"></label>
                    <input asp-for="UserName" class="form-control mb-4" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label mb-2"></label>
                    <input asp-for="Email" class="form-control mb-4" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label mb-2"></label>
                    <input asp-for="FirstName" class="form-control mb-4" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label mb-2"></label>
                    <input asp-for="LastName" class="form-control mb-4" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Points" class="control-label mb-2"></label>
                    <input asp-for="Points" class="form-control mb-4" />
                    <span asp-validation-for="Points" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label mb-2"></label>
                    <input asp-for="PhoneNumber" class="form-control mb-4" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Save" class="btn btn-save" />
                    <a asp-action="Index" class="btn btn-cancel">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
