@model DiningHub.Models.ManageUsersViewModel

@{
    ViewData["Title"] = "Manage Users";
}


<<div class="container">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row d-flex justify-content-between align-items-center">
                <div class="col-sm-4">
                    <h2>Manage Users</h2>
                </div>
                <div class="col-sm-4">
                    <form method="get" class="d-flex">
                        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control me-2" placeholder="Search for users..." />
                        <button type="submit" class="btn btn-primary">Search</button>
                    </form>
                </div>
                <div class="col-sm-4 text-end">
                    <a asp-action="AddStaff" class="btn btn-success">Add Staff</a>
                </div>
            </div>
        </div>

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">
                            Username
                            @if (ViewData["CurrentSort"] != null && ViewData["CurrentSort"].ToString() == "name_desc")
                            {
                                <i class="bi bi-arrow-down"></i>
                            }
                            else
                            {
                                <i class="bi bi-arrow-up"></i>
                            }
                        </a>
                    </th>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["EmailSortParm"]">
                            Email
                            @if (ViewData["CurrentSort"] != null && ViewData["CurrentSort"].ToString() == "email_desc")
                            {
                                <i class="bi bi-arrow-down"></i>
                            }
                            else
                            {
                                <i class="bi bi-arrow-up"></i>
                            }
                        </a>
                    </th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Roles</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>
                            @if (Model.UserRoles.ContainsKey(user.Id))
                            {
                                @foreach (var role in Model.UserRoles[user.Id])
                                {
                                    <span class="badge bg-primary">@role</span>
                                }
                            }
                            else
                            {
                                <span class="badge bg-secondary">No Roles</span>
                            }
                        </td>
                        <td>
                            <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#detailsModal-@user.Id">Details</button>
                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                            @if (!Model.UserRoles[user.Id].Contains("Manager"))
                            {
                                <form method="post" asp-action="Delete" asp-route-id="@user.Id" class="d-inline">
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="d-flex justify-content-center">
            <nav>
                <ul class="pagination">
                    @if (Model.Users.HasPreviousPage)
                    {
                        <li class="page-item">
                            <a class="page-link" href="/manage/user?page=@(Model.Users.PageNumber - 1)@(string.IsNullOrEmpty(ViewData["CurrentSort"]?.ToString()) ? "" : "&sortOrder=" + ViewData["CurrentSort"])@(string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()) ? "" : "&searchString=" + ViewData["CurrentFilter"])">Previous</a>
                        </li>
                    }
                    @for (var i = 1; i <= Model.Users.PageCount; i++)
                    {
                        <li class="page-item @(i == Model.Users.PageNumber ? "active" : "")">
                            <a class="page-link" href="/manage/user?page=@i@(string.IsNullOrEmpty(ViewData["CurrentSort"]?.ToString()) ? "" : "&sortOrder=" + ViewData["CurrentSort"])@(string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()) ? "" : "&searchString=" + ViewData["CurrentFilter"])">@i</a>
                        </li>
                    }
                    @if (Model.Users.HasNextPage)
                    {
                        <li class="page-item">
                            <a class="page-link" href="/manage/user?page=@(Model.Users.PageNumber + 1)@(string.IsNullOrEmpty(ViewData["CurrentSort"]?.ToString()) ? "" : "&sortOrder=" + ViewData["CurrentSort"])@(string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()) ? "" : "&searchString=" + ViewData["CurrentFilter"])">Next</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </div>
</div>

<!-- Modal Templates -->
@foreach (var user in Model.Users)
{
    <div class="modal fade" id="detailsModal-@user.Id" tabindex="-1" aria-labelledby="detailsModalLabel-@user.Id" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="detailsModalLabel-@user.Id">Details - @user.UserName</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <h4>User Information</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">User ID</dt>
                        <dd class="col-sm-8">@user.Id</dd>

                        <dt class="col-sm-4">Username</dt>
                        <dd class="col-sm-8">@user.UserName</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@user.Email</dd>

                        <dt class="col-sm-4">Email Confirmed</dt>
                        <dd class="col-sm-8">@user.EmailConfirmed</dd>

                        <dt class="col-sm-4">First Name</dt>
                        <dd class="col-sm-8">@user.FirstName</dd>

                        <dt class="col-sm-4">Last Name</dt>
                        <dd class="col-sm-8">@user.LastName</dd>

                        <dt class="col-sm-4">Phone Number</dt>
                        <dd class="col-sm-8">@user.PhoneNumber</dd>

                        <dt class="col-sm-4">Phone Number Confirmed</dt>
                        <dd class="col-sm-8">@user.PhoneNumberConfirmed</dd>

                        <dt class="col-sm-4">Access Failed Count</dt>
                        <dd class="col-sm-8">@user.AccessFailedCount</dd>
                    </dl>

                    <h4>User Roles</h4>
                    <ul>
                        @foreach (var role in Model.UserRoles[user.Id])
                        {
                            <li>@role</li>
                        }
                    </ul>
                </div>
                <div class="modal-footer">
                    <a asp-action="ManageRoles" asp-route-id="@user.Id" class="btn btn-primary">Manage Roles</a>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}