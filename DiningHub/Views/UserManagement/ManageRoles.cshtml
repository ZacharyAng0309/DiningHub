@model DiningHub.Models.ManageRolesViewModel

@{
    ViewData["Title"] = "Manage Roles";
}

<h2>Manage Roles for @Model.UserId</h2>

<form asp-action="ManageRoles" method="post">
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        <label>Available Roles</label>
        @foreach (var role in Model.AvailableRoles)
        {
            <div class="form-check">
                <input type="checkbox" class="form-check-input" name="SelectedRoles" value="@role.Name" @(Model.UserRoles.Contains(role.Name) ? "checked" : "") />
                <label class="form-check-label">@role.Name</label>
            </div>
        }
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
