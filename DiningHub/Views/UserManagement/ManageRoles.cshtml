<div class="container-fluid shadow rounded-3 mb-5 bg-white pt-4">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row d-flex justify-content-between align-items-center">
                <div class="col-sm-8">
                    <h2>Manage Roles for @Model.UserName</h2>
                </div>
                <div class="col-sm-4 text-end">
                    <a asp-action="Index" class="btn btn-secondary btn-lg rounded-pill col-6">Back to List</a>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <form asp-action="ManageRoles" method="post">
                <input type="hidden" asp-for="UserId" />
                <div class="form-group px-4">
                    <label style="font-weight:bold; font-size: 1.5em; margin:20px;">Available Roles</label>
                    @foreach (var role in Model.AvailableRoles)
                    {
                        <div class="form-check mb-3">
                            <input type="radio" class="form-check-input" name="SelectedRoles" value="@role.Name" @(Model.UserRoles.Contains(role.Name) ? "checked" : "") style="transform: scale(1.5);" />
                            <label class="form-check-label" style="font-size: 1.25em;">@role.Name</label>
                        </div>
                    }
                </div>
                <div class="form-group d-flex justify-content-center align-items-center mt-4">
                    <input type="submit" value="Save" class="btn btn-success mx-2 btn-lg rounded-pill col-6" />
                </div>
            </form>

            @if (TempData["AlertMessage"] != null)
            {
                <div class="alert alert-danger mt-4" style="font-size: 1.25em;">
                    @TempData["AlertMessage"]
                </div>
            }
        </div>
    </div>
</div>

